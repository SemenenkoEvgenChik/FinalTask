@model  Hospital.BusinessLogic.ViewModels.PatientViewModel
@{
    ViewBag.Title = "CreatePatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("CreatePatient", "Patient", FormMethod.Post))
{
<div class="item">
    <label>Name</label>
    @Html.EditorFor(m => m.Name)

</div>
<div class="item">
    <label>Surname</label>
    @Html.EditorFor(m => m.Surname)
</div>
<div class="item">
    <label>DateOfBirth</label>
    @Html.EditorFor(m => m.DateOfBirth)
</div>
<input type="submit" value="Create" />
}
